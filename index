    <!-- 引入Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.8/dist/chart.umd.min.js"></script>
    
    <script>
        // 物理常数
        const kinematicViscosity = 1.5e-5; // 空气的运动粘度，单位：m²/s
        
        // DOM元素
        const calculatorForm = document.getElementById('calculatorForm');
        const resultSection = document.getElementById('resultSection');
        const reynoldsNumberEl = document.getElementById('reynoldsNumber');
        const turbulenceIntensityEl = document.getElementById('turbulenceIntensity');
        const resultExplanationEl = document.getElementById('resultExplanation');
        const infoBtn = document.getElementById('infoBtn');
        const infoModal = document.getElementById('infoModal');
        const closeModal = document.getElementById('closeModal');
        const referenceTable = document.getElementById('referenceTable');
        
        // 计算雷诺数
        function calculateReynoldsNumber(length, velocity) {
            return (length * velocity) / kinematicViscosity;
        }
        
        // 计算湍流度 (%)
        function calculateTurbulenceIntensity(reynoldsNumber) {
            return 0.16 * Math.pow(reynoldsNumber, -1/8) * 100;
        }
        
        // 生成参考表数据
        function generateReferenceTable() {
            const lengths = [0.1, 0.5, 1, 2, 5, 10, 20, 50, 100];
            const velocity = 10; // 使用10m/s作为参考速度
            
            let tableHtml = '';
            
            lengths.forEach(length => {
                const re = calculateReynoldsNumber(length, velocity);
                const ti = calculateTurbulenceIntensity(re);
                
                tableHtml += `
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap">${length.toFixed(1)}</td>
                        <td class="px-6 py-4 whitespace-nowrap">${Math.round(re).toLocaleString()}</td>
                        <td class="px-6 py-4 whitespace-nowrap">${ti.toFixed(2)}</td>
                    </tr>
                `;
            });
            
            referenceTable.innerHTML = tableHtml;
            return { lengths, velocity };
        }
        
        // 创建湍流度图表
        function createTurbulenceChart() {
            const { lengths, velocity } = generateReferenceTable();
            const ctx = document.getElementById('turbulenceChart').getContext('2d');
            
            // 计算图表数据
            const reynoldsNumbers = lengths.map(length => calculateReynoldsNumber(length, velocity));
            const turbulenceIntensities = reynoldsNumbers.map(re => calculateTurbulenceIntensity(re));
            
            // 创建图表
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: lengths.map(l => `${l} m`),
                    datasets: [{
                        label: '湍流度 (%)',
                        data: turbulenceIntensities,
                        borderColor: '#722ED1',
                        backgroundColor: 'rgba(114, 46, 209, 0.1)',
                        borderWidth: 2,
                        pointBackgroundColor: '#722ED1',
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: false,
                            min: Math.max(0, Math.min(...turbulenceIntensities) - 0.5),
                            title: {
                                display: true,
                                text: '湍流度 (%)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: '特征长度 (m)'
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                afterLabel: function(context) {
                                    const index = context.dataIndex;
                                    return `雷诺数: ${Math.round(reynoldsNumbers[index]).toLocaleString()}`;
                                }
                            }
                        }
                    }
                }
            });
        }
        
        // 表单提交处理
        calculatorForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const length = parseFloat(document.getElementById('characteristicLength').value);
            const velocity = parseFloat(document.getElementById('velocity').value);
            
            // 计算
            const re = calculateReynoldsNumber(length, velocity);
            const ti = calculateTurbulenceIntensity(re);
            
            // 显示结果
            reynoldsNumberEl.textContent = Math.round(re).toLocaleString();
            turbulenceIntensityEl.textContent = ti.toFixed(2) + '%';
            
            // 结果说明
            let explanation = '';
            if (ti < 1) {
                explanation = `湍流度为${ti.toFixed(2)}%，属于低湍流度流动，流动较为平稳，适合需要精确控制的实验或应用。`;
            } else if (ti < 5) {
                explanation = `湍流度为${ti.toFixed(2)}%，属于中等湍流度流动，是工程应用中最常见的流动状态。`;
            } else {
                explanation = `湍流度为${ti.toFixed(2)}%，属于高湍流度流动，流动混合强烈，能量耗散较大。`;
            }
            resultExplanationEl.textContent = explanation;
            
            // 显示结果区域并平滑滚动到结果
            resultSection.classList.remove('hidden');
            resultSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            
            // 添加结果出现动画
            resultSection.classList.add('animate-fadeIn');
            setTimeout(() => {
                resultSection.classList.remove('animate-fadeIn');
            }, 500);
        });
        
        // 模态框控制
        infoBtn.addEventListener('click', () => {
            infoModal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        });
        
        closeModal.addEventListener('click', () => {
            infoModal.classList.add('hidden');
            document.body.style.overflow = '';
        });
        
        infoModal.addEventListener('click', (e) => {
            if (e.target === infoModal) {
                infoModal.classList.add('hidden');
                document.body.style.overflow = '';
            }
        });
        
        // 页面加载完成后初始化
        window.addEventListener('load', () => {
            createTurbulenceChart();
            
            // 添加页面滚动时导航栏效果
            window.addEventListener('scroll', () => {
                const header = document.querySelector('header');
                if (window.scrollY > 10) {
                    header.classList.add('py-2');
                    header.classList.remove('py-4');
                } else {
                    header.classList.add('py-4');
                    header.classList.remove('py-2');
                }
            });
        });
    </script>
</body>
</html>
